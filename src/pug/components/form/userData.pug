.aside__wrapper.userData
  .aside__container
    form.aside(action="")
      h2.aside__title your USER dATA
      span.aside__decor
        +icon('sun')
      .form__item
        input.form__input(type="text" placeholder="Your name")
        +icon('email')
      .form__item
        input.form__input(type="text" placeholder="Place of Birth")
      .form__item
        input.form__input(type="date" placeholder="Date of Birthday")
        +icon('input-arrow')
      .form__item
        input.form__input(type="time" placeholder="Time of Birthday")
        +icon('input-arrow')
      .form__item
        input.form__input(type="email" placeholder="E-mail")
        +icon('email')
      button.btn save changes
      span.aside__decor
        +icon('moon')
      .aside-footer
        a.aside-footer__textLink.changePass Change password
        a.aside-footer__textLink Logout
.aside__wrapper(data-form="change-pass" style="display: none;")
  .aside__container
    form.aside(action="").form
      h2.aside__title change password
      span.aside__decor
        +icon('sun')
      .form__item
        input.form__input(type="password" placeholder="Current password")
        +icon('lock')
      .form__item
        input.form__input(type="password" placeholder="New password")
        +icon('lock')
      .form__item
        input.form__input(type="password" placeholder="Confirm new password")
        +icon('lock')
      button.btn save changes
      span.aside__decor
        +icon('moon')
      .aside-footer
        a.aside-footer__link Back to profile
